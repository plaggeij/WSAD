<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pizza Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <a class="btn btn-primary m-1" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
        <a class="btn btn-primary m-1" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
        <a class="btn btn-primary m-1" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>

    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>